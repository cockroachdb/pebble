  000004:[a#4,SET-a#4,SET]
1:
  000005:[b#3,SET-b#3,SET]
2:
  000006:[c#2,SET-c#2,SET]
3:
  000007:[d#1,SET-d#1,SET]

set allowed-seeks=3

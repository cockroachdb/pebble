# Add a virtual table with a new backing (like an ingestion would).
apply
  add-table:   L1 000005(000010):[u#1,SET-v#1,SET]
  add-backing: 000010
----
L1:
  000005(000010):[u#1,SET-v#1,SET] seqnums:[0-0] points:[u#1,SET-v#1,SET] size:[500]

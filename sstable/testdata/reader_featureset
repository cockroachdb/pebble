# Test building an sstable with no features enabled
build print-features=true
a.SET.1:A
----
features: []

# Test building an sstable with value blocks.
build print-features=true block-size=1
a.SET.2:A2
a.SET.1:A1
----
features: [ValueBlocks]

# Test building an sstable with just range keys.
build print-features=true
Span: a-b:{(#1,RANGEKEYSET,@1,foo)}
Span: b-c:{(#2,RANGEKEYUNSET,@2)}
Span: c-d:{(#3,RANGEKEYDEL)}
----
features: [RangeKeySets,RangeKeyUnsets,RangeKeyDels]

# Test building an sstable with just range deletes.
build print-features=true
Span: a-b:{(#1,RANGEDEL)}
----
features: [RangeDels]

# Test building an sstable with two-level index.
build print-features=true index-block-size=1
a.SET.1:A
b.SET.2:B
c.SET.3:C
d.SET.4:D
----
features: [TwoLevelIndex]

# Test building an sstable with blob values.
build print-features=true
a.SET.1:blob{fileNum=1 value=foo}
----
features: [BlobValues]

# Test building an sstable with all available flags.
build index-block-size=1 block-size=1 print-features=true
a.SET.1:A
Span: b-c:{(#2,RANGEKEYSET,@2,foo)}
Span: c-d:{(#3,RANGEKEYUNSET,@3)}
Span: d-e:{(#4,RANGEKEYDEL)}
Span: e-f:{(#5,RANGEDEL)}
g.SET.2:GG
g.SET.1:G
h.SET.1:blob{fileNum=1 value=foo}
----
features: [ValueBlocks,RangeKeySets,RangeKeyUnsets,RangeKeyDels,RangeDels,TwoLevelIndex,BlobValues]
